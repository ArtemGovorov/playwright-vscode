{
  "name": "playwright",
  "displayName": "Playwright Test for VSCode",
  "description": "Run Playwright Test tests in Visual Studio Code.",
  "icon": "images/playwright-logo.png",
  "version": "0.0.9",
  "preview": true,
  "publisher": "ms-playwright",
  "repository": "https://github.com/microsoft/playwright-vscode",
  "bugs": {
    "url": "https://github.com/microsoft/playwright-vscode/issues"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:**/*playwright*.config.{ts,js}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Test",
        "command": "pw.extension.refreshTests",
        "icon": "$(refresh)",
        "title": "Refresh Playwright Tests"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pw.extension.refreshTests",
          "when": "view == workbench.view.testing",
          "group": "navigation@0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "watch": "tsc -watch -p ./",
    "download-api": "vscode-dts dev",
    "postdownload-api": "vscode-dts main",
    "postinstall": "npm run download-api && npm run build && node out/test/runTest.js install"
  },
  "devDependencies": {
    "@playwright/test": "^1.17.2",
    "@types/babel__core": "^7.1.18",
    "@types/babel__helper-plugin-utils": "^7.10.0",
    "@types/babel__traverse": "^7.14.2",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.3.0",
    "eslint-plugin-notice": "^0.9.10",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.2",
    "vsce": "^2.6.5",
    "vscode-dts": "^0.3.2"
  },
  "dependencies": {
    "@babel/parser": "^7.16.8",
    "@babel/traverse": "^7.16.8",
    "stack-utils": "^2.0.5",
    "ws": "^8.4.2"
  }
}
